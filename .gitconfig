[user]
	email = dev@greenfork.me
	name = Dmitry Matveyev
[diff]
	algorithm = histogram
	colorMoved = default
[bash]
	showInformativeStatus = true
[pull]
	rebase = false
[init]
	defaultBranch = master
[sendemail]
	smtpEncryption = ssl
	smtpServer = smtp.yandex.com
	smtpUser = greenfork.lists
	smtpServerPort = 465
	annotate = true
[credential "smtp://greenfork.lists@smtp.yandex.com:465"]
	helper = store

; delta
[pager]
	diff = delta
	log = delta
	reflog = delta
	show = delta
[interactive]
	diffFilter = delta --color-only
[delta]
	features = line-numbers decorations
	navigate = true
[delta "decorations"]
	commit-decoration-style = bold yellow box ul
	file-style = bold yellow box
	file-decoration-style = none
